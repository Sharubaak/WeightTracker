<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST" action="/weight/add">
                <div class="form-group">
                    <label for="weekTextField">Week</label>
                    <input type="text" class="form-control" id="weekTextField" placeholder="Enter the Week of Weight" name="week" required>
                </div>
                <div class="form-group">
                    <label for="weightTextField">Weight</label>
                    <input type="text" class="form-control" id="weightTextField" placeholder="Enter the weight of the week" name="weight" required>
                </div>
                <div class="form-group">
                    <label for="GoalReachedTextField">Goal Reached?</label>
                    <input type="text" class="form-control" id="GoalReachedTextField" placeholder="Have you reached the goal? (yes or no)" name="GoalReached" required>
                </div>
                <div class="form-group">
                    <label for="DateTextField">Date</label>
                    <input type="text" class="form-control" id="DateTextField" placeholder="Enter the Date of the week" name="date" required>
                </div>
                
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="button" onclick="window.location.href='/weight';">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>
